# JourneyWorks API Environment Configuration
# Copy this file to .env and adjust values as needed

# Server Configuration
PORT=3080
NODE_ENV=development

# Demo Mode - enables demo-friendly features
DEMO_MODE=true
SEED_ON_STARTUP=false

# Elasticsearch Configuration (optional - API works without it)
ELASTICSEARCH_NODE=http://localhost:9280
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=

# Redis Configuration (optional - API uses in-memory fallback)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=

# LLM Configuration (at least one required for AI features)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Python Analysis Service (optional)
ANALYSIS_SERVICE_URL=http://localhost:8081

# Python Model Service (optional)  
MODEL_SERVICE_URL=http://localhost:8080

# Branding - bank name used in generated communications & social mentions
BANK_NAME=Your Bank Name
BANK_HANDLE=@YourBankHandle

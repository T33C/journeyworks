# JourneyWorks Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT COMMIT .env to version control

# =============================================================================
# PORT CONFIGURATION (Confirmed - no conflicts)
# =============================================================================
JOURNEYWORKS_UI_PORT=4280
JOURNEYWORKS_API_PORT=3080
MODEL_SERVICE_PORT=8080
ANALYSIS_SERVICE_PORT=8081
ELASTICSEARCH_PORT=9280
ELASTICSEARCH_TRANSPORT_PORT=9380
KIBANA_PORT=5680
REDIS_PORT=6380

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Primary: Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Fallback: OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# LLM Settings
LLM_PROVIDER=anthropic
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1
LLM_RATE_LIMIT_RPM=60

# =============================================================================
# ELASTICSEARCH CONFIGURATION
# =============================================================================
ELASTICSEARCH_URL=http://localhost:9280
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# Index names
ES_INDEX_COMMUNICATIONS=journeyworks_communications
ES_INDEX_CHUNKS=journeyworks_chunks
ES_INDEX_CASES=journeyworks_cases
ES_INDEX_EVENTS=journeyworks_events
ES_INDEX_SOCIAL=journeyworks_social

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6380
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600

# =============================================================================
# SERVICE URLS (for inter-service communication)
# =============================================================================
MODEL_SERVICE_URL=http://localhost:8080
ANALYSIS_SERVICE_URL=http://localhost:8081
API_BASE_URL=http://localhost:3080

# =============================================================================
# OPENTELEMETRY CONFIGURATION
# =============================================================================
OTEL_ENABLED=true
OTEL_SERVICE_NAME=journeyworks
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_TRACES_SAMPLER=parentbased_always_on

# =============================================================================
# SYNTHETIC DATA CONFIGURATION
# =============================================================================
SYNTHETIC_COMMUNICATION_COUNT=3000
SYNTHETIC_CASE_COUNT=400
SYNTHETIC_EVENT_COUNT=25
SYNTHETIC_SOCIAL_COUNT=500

# Date range for synthetic data (YYYY-MM-DD)
SYNTHETIC_DATE_START=2025-01-01
SYNTHETIC_DATE_END=2026-01-31

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug
CORS_ORIGINS=http://localhost:4280

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
DENSE_MODEL_NAME=BAAI/bge-base-en-v1.5
SPARSE_MODEL_NAME=naver/splade-cocondenser-ensembledistil
RERANKER_MODEL_NAME=BAAI/bge-reranker-base

# Chunking settings for Contextual RAG
CHUNK_SIZE=512
CHUNK_OVERLAP=50
